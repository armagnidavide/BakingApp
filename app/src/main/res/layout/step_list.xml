<?xml version="1.0" encoding="utf-8"?><!--When the width is not so big this layout shows only a RecyclerView with the steps of the recipe -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<android.support.v7.widget.RecyclerView
    android:id="@+id/recycler_view_steps"
    android:name="com.example.android.bakingapp.RecipeStepFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_gravity="center"
    app:layoutManager="LinearLayoutManager"
    tools:context="com.example.android.bakingapp.activities.SelectStepActivity"
    tools:listitem="@layout/step_item" />
</LinearLayout>
