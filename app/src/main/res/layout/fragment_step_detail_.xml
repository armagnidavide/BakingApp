<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOrangeLight"
        android:orientation="vertical">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/stepDetailFragment_simpleExoPlayerView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_height"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/stepDetailFragment_txtVw_recipe_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/stepDetailFragment_imgVw_step_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/fragment_step_detail_content_description_step_image" />
    </LinearLayout>
</ScrollView>
