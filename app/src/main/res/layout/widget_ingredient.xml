<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_layout_ingredient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeLight"
    android:orientation="vertical"
    android:layout_margin="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txtVw_ingredient_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/widget_item_ingredient_name_label"
            android:textColor="@color/colorBrown"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientItem_txtVw_ingredient_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2.5"
            android:textColor="@color/colorBrown"
            android:gravity="start" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txtVw_ingredient_quantity_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/widget_item_ingredient_quantity_label"
            android:textColor="@color/colorBrown"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ingredientItem_txtVw_ingredient_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2.5"
            android:textColor="@color/colorBrown"
            android:gravity="start" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/txtVw_ingredient_measure_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/widget_item_ingredient_measure_label"
            android:textColor="@color/colorBrown"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtVw_ingredient_measure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="2.5"
            android:textColor="@color/colorBrown"
            android:gravity="start" />
    </LinearLayout>
</LinearLayout>

